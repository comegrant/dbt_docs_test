    /// Primary key of the Recipes table
    column fk_dim_recipes
        dataType: string
        isHidden
        isAvailableInMdx: false
        summarizeBy: none
        sourceColumn: fk_dim_recipes

    /// Primary key of the Taxonomies table
    column fk_dim_taxonomies
        dataType: string
        isHidden
        isAvailableInMdx: false
        summarizeBy: none
